require 'erb'

Context = Struct.new(:values) do
    def render(template, destination)
        File.open(destination, 'w') do |file|
            file.write(ERB.new(File.read(template)).result(binding))
        end
    end
end

templates = {
    '/usr/local/etc/entrypoint/log4j.properties.erb'  => '/opt/apache/kafka/config/log4j.properties',
    '/usr/local/etc/entrypoint/server.properties.erb' => '/opt/apache/kafka/config/server.properties',
}

context = Context.new({
    'advertised_address' => ENV['ADVERTISED_ADDRESS'],
    'advertised_port'    => ENV['ADVERTISED_PORT'],
    'listener_address'   => ENV['LISTENER_ADDRESS'],
    'listener_port'      => ENV['LISTENER_PORT'],
    'zookeeper_ensemble' => ENV['ZOOKEEPER_ENSEMBLE'],
})

templates.each { |template, destination| context.render(template, destination) }

exec ARGV.join(' ')
